<Window x:Class="Bezier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bezier"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800"
        KeyDown="MainWindow_KeyDown">
    <Grid>
        <Canvas x:Name="MainCanvas" Background="Transparent" HorizontalAlignment="Left" Height="619" VerticalAlignment="Top" Width="792" MouseMove="MainCanvas_MouseMove"/>
        <Slider x:Name="StepSlider" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Height="21" Width="160" Maximum="40" LargeChange="9" Minimum="3" ValueChanged="Slider_ValueChanged" IsTabStop="False" IsSelectionRangeEnabled="True" Value="30" SmallChange="5"/>
    </Grid>
</Window>
